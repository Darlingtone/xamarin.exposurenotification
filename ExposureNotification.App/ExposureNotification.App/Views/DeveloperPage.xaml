<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ExposureNotification.App.Views.DeveloperPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:ExposureNotification.App.ViewModels"
    Title="Developer"
    x:DataType="viewmodel:DeveloperViewModel"
    BackgroundColor="{StaticResource BackgroundColor}"
    mc:Ignorable="d">
    <ContentPage.BindingContext>
        <viewmodel:DeveloperViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Style="{DynamicResource Container}">
                <Frame Style="{DynamicResource CardFrame}">
                    <StackLayout Spacing="20">
                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                            <Label Text="Native Implementation: " />
                            <Label FontAttributes="Bold" Text="{Binding NativeImplementationName}" />
                        </StackLayout>

                        <Button
                            Command="{Binding ResetWelcome}"
                            HorizontalOptions="CenterAndExpand"
                            Style="{DynamicResource ButtonRounded}"
                            Text="Reset Welcome State" />

                        <Button
                            Command="{Binding ResetEnabled}"
                            HorizontalOptions="CenterAndExpand"
                            Style="{DynamicResource ButtonRounded}"
                            Text="Reset Last Enabled State" />

					</StackLayout>
				</Frame>


				<Frame Style="{DynamicResource CardFrame}">
					<StackLayout Spacing="20">
						<Label Text="Notify Others" FontAttributes="Bold" FontSize="Subtitle" />
						
						<Button
							Command="{Binding ResetSelfDiagnosis}"
							HorizontalOptions="CenterAndExpand"
							Style="{DynamicResource ButtonRounded}"
							Text="Reset Self Diagnosis" />
					</StackLayout>
				</Frame>

				<Frame Style="{DynamicResource CardFrame}">
					<StackLayout Spacing="20">
						<Label Text="Exposures" FontAttributes="Bold" FontSize="Subtitle" />
            <Button
                Command="{Binding ResetExposures}"
                HorizontalOptions="CenterAndExpand"
                Style="{DynamicResource ButtonRounded}"
                Text="Reset Exposures" />
						<Button
							Command="{Binding AddExposures}"
							HorizontalOptions="CenterAndExpand"
							Style="{DynamicResource ButtonRounded}"
							Text="Add Exposures" />
					</StackLayout>
				</Frame>

				<Frame Style="{DynamicResource CardFrame}">
					<StackLayout Spacing="20">
						<Label Text="Batch File Index" FontAttributes="Bold" FontSize="Subtitle" />

						<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
							<Label Text="Latest Batch File Processed: " />
							<Label Text="{Binding CurrentBatchFileIndex}" FontAttributes="Bold" />
						</StackLayout>

						<Button
							Command="{Binding ResetBatchFileIndex}"
							HorizontalOptions="CenterAndExpand"
							Style="{DynamicResource ButtonRounded}"
							Text="Reset Batch File Index" />


						<Button
							Command="{Binding ManualTriggerKeyFetch}"
							HorizontalOptions="CenterAndExpand"
							Style="{DynamicResource ButtonRounded}"
							Text="Trigger Key Fetch" />

					</StackLayout>
				</Frame>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>